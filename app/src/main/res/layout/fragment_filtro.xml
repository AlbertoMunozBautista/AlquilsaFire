<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:id="@+id/filtro_layout"
    android:orientation="vertical"
    tools:context=".PruebaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="40dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/logo_white_large" />


                <ImageButton
                    android:id="@+id/imgFiltroReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:background="@drawable/boton_redondo_entero"
                    app:srcCompat="@drawable/ic_reset" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvFiltroCombustible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de combustión"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnFiltroElectrico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/secundario"
                    android:background="@drawable/boton_redondo"
                    android:text="Eléctrico" />

                <android.widget.Button
                    android:id="@+id/btnFiltroGasolina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secundario"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/boton_redondo"
                    android:text="Gasolina" />

                <android.widget.Button
                    android:id="@+id/btnFiltroDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secundario"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/boton_redondo"
                    android:text="Diesel" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFiltroTransmision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de transmisión"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnFiltroAutomatica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_redondo"
                    android:text="Automática"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/secundario" />

                <android.widget.Button
                    android:id="@+id/btnFiltroManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:layout_weight="1"
                    android:text="Manual"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/secundario"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvFiltroAsientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de asientos"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="1" />

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="2"  />

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="3" />

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="4" />

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="5"  />

                <android.widget.Button
                    android:id="@+id/btnFiltroAsiento5Mas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="+5"  />

            </LinearLayout>

            <TextView
                android:id="@+id/tvFiltroTipoVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de vehículo"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnFiltroMoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Moto" />

                <android.widget.Button
                    android:id="@+id/btnFiltroCoche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Coche"  />

                <android.widget.Button
                    android:id="@+id/btnFiltroFurgoneta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Furgoneta" />

                <android.widget.Button
                    android:id="@+id/btnFiltroDeportivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_redondo"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Deportivo"  />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp">

                <android.widget.Button
                    android:id="@+id/btnFiltroBuscar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_fondo_naranja"
                    android:elevation="5dp"
                    android:text="Buscar"
                    android:textSize="20dp" />

                <android.widget.Button
                    android:id="@+id/btnFiltroCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_fondo_transparente"
                    android:elevation="5dp"
                    android:text="Cancelar"
                    android:textColor="@drawable/text_registro"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>