<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:id="@+id/anadirMiUbicacion_fragment"
    android:orientation="vertical"
    tools:context=".ui.miUbicacion.AnadirMiUbicacionFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <android.widget.EditText
            android:id="@+id/etAnadirMiUbicacionNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:textColor="@color/white"
            android:backgroundTint="@color/secundario"
            android:textColorHint="@color/white"
            android:hint="Nombre" />

        <fragment
            android:id="@+id/mapaAnadirMiUbicacion"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            tools:context="com.sheilalberto.alquilsafire.ui.miUbicacion.AnadirMiUbicacionFragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.Button
                android:id="@+id/btnAnadirMiUbicacionAnadir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@drawable/boton_fondo_naranja"
                android:elevation="5dp"
                android:text="AÃ±adir"
                android:textSize="20dp" />

            <android.widget.Button
                android:id="@+id/btnAnadirMiUbicacionCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="40dp"
                android:layout_weight="1"
                android:background="@drawable/boton_fondo_transparente"
                android:elevation="5dp"
                android:text="Cancelar"
                android:textColor="@drawable/text_registro"
                android:textSize="20dp" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>