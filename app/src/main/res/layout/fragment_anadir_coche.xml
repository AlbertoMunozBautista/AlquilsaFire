<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:id="@+id/anadir_layout"
    android:orientation="vertical"
    tools:context=".PruebaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="30dp">


                <ImageView
                    android:id="@+id/imaAnadirFoto"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="35dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_coche_barra"/>


            </LinearLayout>

            <android.widget.EditText
                android:id="@+id/etAnadirNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"
                android:ems="10"
                android:textColor="@color/white"
                android:backgroundTint="@color/secundario"
                android:textColorHint="@color/white"
                android:hint="Nombre" />


            <TextView
                android:id="@+id/tvAnadirUbicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:text="Selecciona Ubicación"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <Spinner
                android:id="@+id/spinnerAnadirUbicacion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/boton_redondo"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="45dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvAnadirAutonomia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingTop="25dp"
                    android:text="Autonomía"
                    android:textColor="@color/white"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/tvAnadirAutonomia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingTop="25dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tvAnadirAutonomia3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="45dp"
                    android:paddingTop="25dp"
                    android:text="Km"
                    android:textColor="@color/white"
                    android:textSize="20dp" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingTop="15dp">

                <SeekBar
                    android:id="@+id/pbAnadirAutonomia"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="15dp"
                    android:progressBackgroundTint="@color/white" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAnadirCombustible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de combustión"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnAnadirElectrico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/secundario"
                    android:background="@drawable/boton_fondo_transparente"
                    android:text="Eléctrico" />

                <android.widget.Button
                    android:id="@+id/btnAnadirGasolina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secundario"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/boton_fondo_transparente"
                    android:text="Gasolina" />

                <android.widget.Button
                    android:id="@+id/btnAnadirDiesel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secundario"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/boton_fondo_transparente"
                    android:text="Diesel" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvAnadirTransmision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de transmisión"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnAnadirAutomatica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/boton_fondo_transparente"
                    android:text="Automática"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/secundario" />

                <android.widget.Button
                    android:id="@+id/btnAnadirManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:layout_weight="1"
                    android:text="Manual"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/secundario"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvAnadirsientos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de asientos"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="1" />

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="2"  />

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="3" />

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="4" />

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="5"  />

                <android.widget.Button
                    android:id="@+id/btnAnadirAsiento5Mas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="+5"  />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAnadirTipoVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de vehículo"
                android:paddingLeft="45dp"
                android:paddingTop="25dp"
                android:textColor="@color/white"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <android.widget.Button
                    android:id="@+id/btnAnadirMoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Moto" />

                <android.widget.Button
                    android:id="@+id/btnAnadirCoche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Coche"  />

                <android.widget.Button
                    android:id="@+id/btnAnadirFurgoneta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Furgoneta" />

                <android.widget.Button
                    android:id="@+id/btnAnadirDeportivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/boton_fondo_transparente"
                    android:textColor="@color/secundario"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:text="Deportivo"  />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <android.widget.EditText
                android:id="@+id/etAnadirMatricula"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/boton_matricula"
                android:textColorHint="@color/black"
                android:paddingStart="15dp"
                android:hint="Matricula" />

            <android.widget.EditText
                android:id="@+id/etAnadirPrecio"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@color/black"
                android:paddingStart="15dp"
                android:background="@drawable/boton_anadir_precio"
                android:textColorHint="@color/black"
                android:hint="Precio €/día" />

        </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="30dp">

                <android.widget.Button
                    android:id="@+id/btnAnadirAnadir"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_fondo_naranja"
                    android:elevation="5dp"
                    android:text="Añadir"
                    android:textSize="20dp" />

                <android.widget.Button
                    android:id="@+id/btnAnadirCancelar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/boton_fondo_transparente"
                    android:elevation="5dp"
                    android:text="Cancelar"
                    android:textColor="@drawable/text_registro"
                    android:textSize="20dp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>